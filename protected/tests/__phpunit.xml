<phpunit
	bootstrap="bootstrap.php"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	stopOnFailure="false"
	strict="false"
	verbose="true">

	<selenium>
		<browser
			name="Internet Explorer"
			ip="{{phpUnitSeleniumIp}}"
			host="{{phpUnitSeleniumHost}}"
			port="4444"
			browser="*iexplore"
		/>
		<!--<browser
			name="Firefox"
			ip="{{phpUnitSeleniumIp}}"
			host="{{phpUnitSeleniumHost}}"
			port="4444"
			browser="*firefox"
		/>-->
	</selenium>

</phpunit>